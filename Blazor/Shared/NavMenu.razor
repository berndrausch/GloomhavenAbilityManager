@using GloomhavenAbilityManager.Logic.Contracts.Interfaces
@using GloomhavenAbilityManager.Logic.Contracts.Data
@inject ICharacterService CharacterService
@inject ICharacterClassService ClassService

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Gloomhaven</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        @foreach (var character in characters)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href=@($"char\\{character.Id}")>
                    <span class="oi oi-list-rich" aria-hidden="true"></span> @character.Name
                </NavLink>
            </li>
        }

        @foreach (var cls in classes)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href=@($"class\\{cls.Id}")>
                    <span class="oi oi-list-rich" aria-hidden="true"></span> @cls.Name
                </NavLink>
            </li>
        }
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private IEnumerable<Character> characters;
    private IEnumerable<CharacterClass> classes;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override void OnInitialized()
    {
        characters = CharacterService.GetCharacters().OrderBy(c => c.Name);
        classes = ClassService.GetClasses().OrderBy(c => c.Id);
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
